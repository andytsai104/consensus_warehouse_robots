<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="2wd_warehouse_robot">

  <!-- ===========================
       base_footprint
  ============================ -->
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ===========================
       Base link
  ============================ -->
  <link name="base_link">
    <inertial>
      <!-- Reduced mass for simulation stability (Original ~305kg -> Scaled to ~30kg) -->
      <origin xyz="-0.2043 0 0.0939" rpy="0 0 0" />
      <mass value="30.0" />
      <inertia ixx="1.99" ixy="0.0" ixz="0.32"
               iyy="4.47" iyz="0.0" izz="6.06" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://warehouse_robot_description/meshes/2wd/base_link.STL" />
      </geometry>
      <material name="Grey">
        <color rgba="0.6 0.6 0.6 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://warehouse_robot_description/meshes/2wd/base_link.STL" />
      </geometry>
    </collision>
  </link>

  <!-- ===========================
       Wheels Macro
  ============================ -->
  <!-- Left Wheel -->
  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0.033" rpy="0 0 0" />
      <mass value="2.0" /> <!-- Scaled down -->
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.02" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://warehouse_robot_description/meshes/2wd/left_wheel.STL" />
      </geometry>
      <material name="Black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://warehouse_robot_description/meshes/2wd/left_wheel.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="-0.48569 0.55575 -0.1755" rpy="1.5708 0 0" />
    <parent link="base_link" />
    <child link="left_wheel" />
    <axis xyz="0 0 -1" />
    <limit effort="100" velocity="10" />
  </joint>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <inertial>
      <origin xyz="0 0 -0.033" rpy="0 0 0" />
      <mass value="2.0" />
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.02" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://warehouse_robot_description/meshes/2wd/right_wheel.STL" />
      </geometry>
      <material name="Black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://warehouse_robot_description/meshes/2wd/right_wheel.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="-0.48569 -0.55575 -0.1755" rpy="1.5708 0 0" />
    <parent link="base_link" />
    <child link="right_wheel" />
    <axis xyz="0 0 -1" />
    <limit effort="100" velocity="10" />
  </joint>

  <!-- ===========================
       Caster Wheel Assembly
  ============================ -->
  <link name="caster_connection">
    <inertial>
      <origin xyz="-0.03 0 -0.11" rpy="0 0 0" />
      <mass value="0.5" />
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://warehouse_robot_description/meshes/2wd/caster_connection.STL" />
      </geometry>
      <material name="Grey">
        <color rgba="0.6 0.6 0.6 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://warehouse_robot_description/meshes/2wd/caster_connection.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="caster_connection_joint" type="continuous">
    <origin xyz="0.50656 0 0" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="caster_connection" />
    <axis xyz="0 0 -1" />
  </joint>

  <link name="caster_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="1.0" />
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://warehouse_robot_description/meshes/2wd/caster_wheel.STL" />
      </geometry>
      <material name="Black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://warehouse_robot_description/meshes/2wd/caster_wheel.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="caster_wheel_joint" type="continuous">
    <origin xyz="-0.13927 -0.0053 -0.22785" rpy="1.5708 0 0" />
    <parent link="caster_connection" />
    <child link="caster_wheel" />
    <axis xyz="0 0 1" />
  </joint>

  <!-- Frictionless Caster (Critical for smooth turning) -->
  <gazebo reference="caster_wheel">
    <mu1>200.0</mu1>
    <mu2>100.0</mu2>
    <kp>1000000.0</kp>
    <kd>1.0</kd>
  </gazebo>

  <gazebo reference="caster_connection">
    <mu1>200.0</mu1>
    <mu2>100.0</mu2>
    <kp>1000000.0</kp>
    <kd>1.0</kd>
  </gazebo>

  <!-- ===========================
       Sensor (LiDAR)
  ============================ -->
 <link name="lidar_link">
    <inertial>
      <origin xyz="-0.0466543100833166 7.97140131680862E-14 0.119806074995455" rpy="0 0 0" />
      <mass value="2.61"/>
      <inertia ixx="0.0350676149959638" ixy="0" ixz="0.0106239993570244"
      iyy="0.0617612827662457" iyz="0" izz="0.0707762467956502" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://warehouse_robot_description/meshes/2wd/LiDAR.STL" />
      </geometry>
      <material name="Grey">
        <color rgba="0.6 0.6 0.6 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://warehouse_robot_description/meshes/2wd/LiDAR.STL" />
      </geometry>
    </collision>
  </link>
  <joint
    name="lidar_joint"
    type="fixed">
    <origin xyz="0.50656 0 0.42188" rpy="3.1416 0 0" />
    <parent link="base_link" />
    <child link="lidar_link" />
    <axis xyz="0 0 0" />
  </joint>

  <gazebo reference="lidar_link">
    <sensor name="lidar" type="gpu_lidar">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <topic>scan</topic>
      <update_rate>50</update_rate>
      <gz_frame_id>lidar_link</gz_frame_id>
      <frame_id>lidar_link</frame_id>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-3.14</min_angle>
            <max_angle>3.14</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.3</min>
          <max>12.0</max>
        </range>
      </ray>
      <plugin filename="libignition-gazebo-sensors-system.so"
              name="ignition::gazebo::systems::Sensors">
        <render_engine>ogre2</render_engine>
      </plugin>
    </sensor>
  </gazebo>
  <gazebo reference="lidar_link">
    <plugin filename="ignition-gazebo-pose-publisher-system"
            name="ignition::gazebo::systems::PosePublisher">
      <publish_tf>true</publish_tf>
      <frame_id>lidar_link</frame_id>
    </plugin>
  </gazebo>

  <!-- ===========================
       Diff Drive
  ============================ -->
  <gazebo>
    <plugin filename="libignition-gazebo-diff-drive-system.so"
            name="ignition::gazebo::systems::DiffDrive">
      
      <!-- Joints -->
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <!-- <wheel_separation>1.1115</wheel_separation> -->
      <wheel_separation>0.8</wheel_separation>
      <wheel_radius>0.1755</wheel_radius>

      <min_acceleration>-10</min_acceleration>
      <max_acceleration>10</max_acceleration>

      <!-- Topics -->
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <tf_topic>/tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_footprint</child_frame_id>
      <odom_publish_frequency>50</odom_publish_frequency>
    </plugin>
  </gazebo>

  <!-- ===========================
       Joint State
  ============================ -->
  <gazebo>
  <plugin filename="libignition-gazebo-joint-state-publisher-system.so" 
          name="ignition::gazebo::systems::JointStatePublisher">
    <topic>joint_states</topic>
  </plugin>
  </gazebo>

</robot>
